# Docker Environment Variables
# Copy this file to .env and customize for your environment

# Version and build info (auto-detected if not set)
VERSION=dev
COMMIT=unknown

# Docker registry
DOCKER_REGISTRY=ghcr.io/jeremyhahn

# Server configuration
KEYSTORE_CONFIG=/etc/keychain/config.yaml

# Cloud provider credentials (if using cloud backends)
# AWS KMS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# GCP KMS
GOOGLE_APPLICATION_CREDENTIALS=/etc/keychain/gcp-credentials.json
GCP_PROJECT_ID=
GCP_LOCATION=global
GCP_KEY_RING=keychain

# Azure Key Vault
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_VAULT_URL=

# HashiCorp Vault
VAULT_ADDR=https://vault.example.com:8200
VAULT_TOKEN=
VAULT_MOUNT_PATH=keychain

# PKCS#11 Configuration
PKCS11_LIBRARY=/usr/lib/softhsm/libsofthsm2.so
PKCS11_TOKEN=keychain-token
PKCS11_PIN=1234

# TPM2 Configuration
TPM_DEVICE_PATH=/dev/tpmrm0

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# TLS/mTLS
TLS_ENABLED=true
TLS_MIN_VERSION=TLS1.2
CLIENT_AUTH=require_and_verify

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Rate Limiting
RATELIMIT_ENABLED=true
RATELIMIT_REQUESTS_PER_MIN=1000

# Docker resource limits (optional)
# Uncomment and adjust as needed
# DOCKER_CPU_LIMIT=2
# DOCKER_MEMORY_LIMIT=1g
# DOCKER_MEMORY_RESERVATION=512m
